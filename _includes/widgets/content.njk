<header class="row header">
<section class="col-md-8 mt-5 mx-auto p-0">
<h1>{{title}}</h1>
<h2 class="lead">{{description}}</h2>
{% if image %}<img class="img-fluid mb-3 img-profile-header mt-3" width="100%" height="100%" src="https://wsrv.nl/?url={{metadata.url}}{{image}}&output=webp" alt="{{title}}"/>{% endif %}
</section>
</header>
<main class="row">
<article class="col-md-8 mt-3 mx-auto p-3 text-start">{{ content |safe }}</article>
</main>
